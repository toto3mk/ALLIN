public class j {

    public static void main(String[] args) {

        String str = "helloiamtaha";

        String[] letters = str.split("");
        for (int i = 0; i < letters.length; i++) {
            if (i % 2 != 0) {
                System.out.print(letters[i]);
                System.out.print(" ");

            }

        }

    }
}

